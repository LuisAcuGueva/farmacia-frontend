# =====================================
# Application
# =====================================
VITE_APP_NAME=Farmasys
VITE_APP_VERSION=0.0.0

# =====================================
# API Configuration
# =====================================
# NOTA: No es necesario configurar VITE_API_BASE_URL para desarrollo local
# La aplicación construirá automáticamente la URL según el subdominio
# Ejemplo: farmacia-central.farmasys.local:5173 -> farmacia-central.localhost:3000

# Solo configura estas variables para producción o si necesitas una URL específica:
# VITE_API_BASE_URL=http://localhost:3000/api/v1

# Puerto del API backend (usado en desarrollo)
VITE_API_PORT=3000

# Ruta base del API
VITE_API_PATH=/api/v1

# Dominio del API en producción (opcional)
# VITE_API_DOMAIN=api.farmasys.com

# Timeout de las peticiones (en milisegundos)
VITE_API_TIMEOUT=30000

# =====================================
# Multi-tenant Configuration
# =====================================
# Subdomain del administrador
VITE_ADMIN_SUBDOMAIN=admin

# Subdomain por defecto (solo para localhost puro)
VITE_DEFAULT_TENANT=demo

# Subdomains reservados (separados por coma)
VITE_RESERVED_SUBDOMAINS=admin,www,api,app,cdn,static

# Mostrar info del tenant en desarrollo
VITE_SHOW_TENANT_INFO=true

# =====================================
# Tenant Caching Configuration
# =====================================
# Habilitar caché de tenant
VITE_ENABLE_TENANT_CACHE=true

# Tiempo de vida de la caché del tenant (en milisegundos)
VITE_TENANT_CACHE_TTL=300000

# =====================================
# Offline Mode Configuration
# =====================================
# Habilitar modo offline (service worker)
VITE_ENABLE_OFFLINE_MODE=false
